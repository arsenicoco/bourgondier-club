---
import "../../styles/tailwind.css";
import ThemeSwitcher from "../../components/ThemeSwitcher.astro";
import LanguageSwitcher from "../../components/LanguageSwitcher.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <!-- Favicon -->
        <link rel="icon" href="/favicon.ico" sizes="32x32">
        <link rel="icon" href="/favicon.svg" type="image/svg+xml">
        <link rel="apple-touch-icon" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="192x192" href="/android-chrome-192x192.png">
        <link rel="icon" type="image/png" sizes="512x512" href="/android-chrome-512x512.png">
        <meta name="generator" content={Astro.generator} />

        <!-- SEO Meta Tags -->
        <title>
            Wine Tasting Club "Bourgondier Weekly" | Wine Tastings in Amsterdam
        </title>
        <meta
            name="description"
            content="Join Bourgondier Weekly wine tasting club in Amsterdam. Weekly topical wine tastings."
        />
        <meta
            name="keywords"
            content="wine tasting, burgundy, wine club, Amsterdam, wine meetings, sommelier, wine culture"
        />
        <meta name="author" content="Bourgondier Weekly" />
        <meta name="robots" content="index, follow" />
        <link rel="canonical" href="https://club.bourgondier.wine/en/" />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://club.bourgondier.wine/en/" />
        <meta
            property="og:title"
            content="Wine Tasting Club Bourgondier Weekly | Wine Tastings in Amsterdam"
        />
        <meta
            property="og:description"
            content="Join Bourgondier Weekly wine tasting club in Amsterdam. Weekly topical wine tastings."
        />
        <meta
            property="og:image"
            content="https://club.bourgondier.wine/og-image.jpg"
        />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
        <meta property="og:locale" content="en_US" />
        <meta property="og:locale:alternate" content="ru_RU" />
        <meta property="og:site_name" content="Bourgondier Weekly" />

        <!-- Twitter Card -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:url" content="https://club.bourgondier.wine/en/" />
        <meta
            name="twitter:title"
            content="Wine Tasting Club Bourgondier Weekly | Wine Tastings in Amsterdam"
        />
        <meta
            name="twitter:description"
            content="Join Bourgondier Weekly wine tasting club in Amsterdam. Weekly topical wine tastings."
        />
        <meta
            name="twitter:image"
            content="https://club.bourgondier.wine/og-image.jpg"
        />

        <!-- Additional SEO -->
        <meta name="theme-color" content="#722F37" />
        <meta name="application-name" content="Bourgondier Weekly" />
        <meta name="apple-mobile-web-app-title" content="Bourgondier Weekly" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="default" />

        <!-- Geo tags -->
        <meta name="geo.region" content="NL-NH" />
        <meta name="geo.placename" content="Amsterdam" />
        <meta name="geo.position" content="52.3676;4.9041" />
        <meta name="ICBM" content="52.3676, 4.9041" />

        <!-- Language alternates -->
        <link
            rel="alternate"
            hreflang="en"
            href="https://club.bourgondier.wine/en/"
        />
        <link
            rel="alternate"
            hreflang="ru"
            href="https://club.bourgondier.wine/"
        />
        <link
            rel="alternate"
            hreflang="x-default"
            href="https://club.bourgondier.wine/en/"
        />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=DM+Mono&family=Noto+Serif+Display&display=swap"
            rel="stylesheet"
        />
        <style is:global>
            body {
                transition: background-color 0.3s ease;
            }

            body.light-theme {
                background-color: #f8f8f8;
                background: linear-gradient(
                    135deg,
                    #f8f8f8 0%,
                    #f5e8e8 50%,
                    #f0d8d8 100%
                );
            }

            body.dark-theme {
                background-color: #1a1a1a;
                background: linear-gradient(
                    135deg,
                    #1a1a1a 0%,
                    #2a1a1a 50%,
                    #4a1a1a 100%
                );
            }

            html.dark body {
                background-color: #1a1a1a;
                background: linear-gradient(
                    135deg,
                    #1a1a1a 0%,
                    #2a1a1a 50%,
                    #4a1a1a 100%
                );
            }

            html:not(.dark) body {
                background-color: #f8f8f8;
                background: linear-gradient(
                    135deg,
                    #f8f8f8 0%,
                    #f5e8e8 50%,
                    #f0d8d8 100%
                );
            }
        </style>

        <script is:inline>
            function updateTheme() {
                const isDark = localStorage.getItem("theme") === "dark";

                if (isDark) {
                    document.documentElement.classList.add("dark");
                    document.body.classList.remove("light-theme");
                    document.body.classList.add("dark-theme");
                } else {
                    document.documentElement.classList.remove("dark");
                    document.body.classList.remove("dark-theme");
                    document.body.classList.add("light-theme");
                }
            }

            // Apply theme immediately, defaulting to light if no preference set
            if (!localStorage.getItem("theme")) {
                localStorage.setItem("theme", "light");
            }
            updateTheme();

            // Set language to English on load
            localStorage.setItem("language", "en");
        </script>
    </head>
    <body class="min-h-screen">
        <div class="absolute top-4 right-4 z-10 flex gap-2">
            <LanguageSwitcher />
            <ThemeSwitcher />
        </div>
        <slot />
    </body>
</html>
